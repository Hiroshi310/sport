<div class="container">
  <div class="container-inner inner-default clearfix">
    <% events.each do |event| %>
    <%= link_to(event) do %>
      <div class="event-box">
        <div class="image">
          <div class="img-wrap">
            <% if event.image.present? %>
              <%= image_tag(event.image ,:size => "250x270", alt: event.title) %>
            <% else %>
              <%= image_tag("no-image2.png" , alt: event.title) %>
            <% end %>
          </div>
        </div>
        <div class="detail1">
          <p class="title">
            <%= event.title .truncate(26, omission: '…') %>
          </p>
          <% end %>
        </div>
          <div class="detail2">
          <p class="schedule"><%= event.schedule %> 開催予定</p>
          <p class="tag"><%= render 'events/tag_list', tag_list: event.category_list %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>